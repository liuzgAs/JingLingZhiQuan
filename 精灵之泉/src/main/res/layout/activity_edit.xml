<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="com.jlzquan.www.activity.EditActivity">

    <include layout="@layout/view_bar" />

    <EditText
        android:id="@+id/editNickName"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:hint="请输入昵称"
        android:paddingLeft="10dp"
        android:textSize="@dimen/normal_textsize" />

    <RelativeLayout
        android:id="@+id/viewShengRi"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/layout_selector_white_system_gray">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="生日"
            android:textSize="@dimen/normal_textsize" />

        <TextView
            android:hint="请选择生日"
            android:layout_marginRight="10dp"
            android:id="@+id/textShengRi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/normal_textsize"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/imageView23"
            android:layout_toStartOf="@+id/imageView23" />

        <ImageView
            android:id="@+id/imageView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/right_big" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/viewSex"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/layout_selector_white_system_gray" >

        <TextView
            android:id="@+id/textView32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="性别"
            android:textSize="@dimen/normal_textsize" />

        <RadioGroup
            android:orientation="horizontal"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <RadioButton
                android:checked="true"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="男"
                android:id="@+id/radioNan" />

            <RadioButton
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="女"
                android:id="@+id/radioNv" />
        </RadioGroup>

    </RelativeLayout>

    <EditText
        android:id="@+id/editDiQu"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:hint="请输入地区"
        android:paddingLeft="10dp"
        android:textSize="@dimen/normal_textsize" />

</LinearLayout>
