<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".activity.GuanLiWDDPActivity">

    <com.jude.easyrecyclerview.EasyRecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_empty="@layout/view_empty"
        app:layout_progress="@layout/view_progress"
        app:scrollbarStyle="insideOverlay" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/viewBar"
        android:background="@mipmap/bar_bg"
        android:fitsSystemWindows="true"
        android:gravity="bottom"
        android:minHeight="?attr/actionBarSize"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/titleHeight">

            <ImageView
                android:paddingLeft="10dp"
                android:background="@drawable/white_selector"
                android:id="@+id/imageBack"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:paddingBottom="15dp"
                android:paddingRight="20dp"
                android:paddingTop="15dp"
                android:src="@mipmap/left"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:visibility="gone"
                android:background="@drawable/shape_white1dp_tanwhite_15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:text="预览"
                android:layout_marginRight="10dp"
                android:textColor="@color/white"
                android:textSize="@dimen/normal_textsize"
                android:id="@+id/textYuLan"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:visibility="gone"
                android:layout_marginRight="5dp"
                android:background="@drawable/shape_white1dp_tanwhite_15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:text="排序"
                android:textColor="@color/white"
                android:textSize="@dimen/normal_textsize"
                android:id="@+id/textView45"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/textYuLan"
                android:layout_toStartOf="@+id/textYuLan" />

            <TextView
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:textSize="@dimen/titleSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的店铺"
                android:id="@+id/textName"
                android:layout_centerVertical="true"
                />
            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/viewShare"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                >

                <ImageView
                    android:id="@+id/imageView112"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/fenxiang_dianpu"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="店铺分享"
                    android:textColor="@color/white"
                    android:textSize="@dimen/litterText"
                    android:layout_toRightOf="@+id/imageView112"
                    android:layout_toEndOf="@+id/imageView112" />
            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
