<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/basic_color"
    android:orientation="vertical"
    tools:context="com.sxbwstxpay.activity.ShouKuanEWMActivity">

    <include layout="@layout/view_bar" />

    <LinearLayout
        android:id="@+id/viewShouKuanEWM"
        android:layout_weight="0.86"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.61">

            <android.support.v7.widget.CardView
                android:id="@+id/cardEwm"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="45dp"
                app:cardCornerRadius="15dp"
                app:cardPreventCornerOverlap="false">

                <ImageView
                    android:id="@+id/imageEWM"
                    android:layout_width="220dp"
                    android:layout_height="220dp"
                    android:src="@mipmap/shoukuanererma" />
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/textName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardEwm"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="收款人：李达达"
                android:textColor="@color/white"
                android:textSize="@dimen/titleSize" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:background="@mipmap/shoukuanmadibu">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="25dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image0100"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:layout_weight="1"
                        android:src="@mipmap/saomiao_shoukuan" />

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/basic_color" />

                    <ImageView
                        android:id="@+id/image0101"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:layout_weight="1"
                        android:src="@mipmap/erweima2" />

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/basic_color" />

                    <ImageView
                        android:id="@+id/image0102"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:layout_weight="1"
                        android:src="@mipmap/wanchengzhifuewm" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="打开客户端\n扫一扫" />

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="扫描商户\n二维码" />

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="输入消费金额\n完成支付" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.14"
        android:background="#f0f9ee">

        <Button
            android:id="@+id/btnBaoCunXC"
            style="@style/MyButton"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="保存至相册" />
    </RelativeLayout>
</LinearLayout>
