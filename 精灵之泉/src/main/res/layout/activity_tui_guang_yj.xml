<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="com.sxbwstxpay.activity.TuiGuangYJActivity">

    <include layout="@layout/view_bar" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="3dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/viewDaiShowFY"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:textSize="@dimen/normal_textsize"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/basic_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥0.0"
                    android:id="@+id/textDaiShouFY"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:textSize="@dimen/normal_textsize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="待收返佣："
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/textDaiShouFY"
                    android:layout_toStartOf="@+id/textDaiShouFY" />
            </RelativeLayout>

            <TextView
                android:background="@mipmap/fengexian_huise"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp">

                <ImageView
                    android:id="@+id/imageView49"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/tuiguangyongjinimg" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_toEndOf="@+id/imageView49"
                    android:layout_toRightOf="@+id/imageView49">

                    <TextView
                        android:id="@+id/textDes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:text="可提现金额"
                        android:textSize="@dimen/normal_textsize" />

                    <TextView
                        android:id="@+id/textJinE"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/textDes"
                        android:layout_alignRight="@+id/textDes"
                        android:layout_below="@+id/textDes"
                        android:text="0.0"
                        android:textColor="@color/light_black"
                        android:textSize="50dp" />
                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:layout_marginLeft="10dp"
        android:textSize="@dimen/normal_textsize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="累计平台返佣¥0.0"
        android:id="@+id/textLeiJi" />

    <Button
        android:id="@+id/buttonLiJiTX"
        style="@style/MyButton"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:text="立即提现" />

    <Button
        android:id="@+id/buttonShouYiMX"
        style="@style/MyButtonStroke"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="25dp"
        android:text="收益明细" />

</LinearLayout>
