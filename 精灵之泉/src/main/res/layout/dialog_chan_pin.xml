<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="bottom"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/imageImg"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/ic_empty01" />

        <TextView
            android:id="@+id/textTitleDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageImg"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/imageImg"
            android:layout_toRightOf="@+id/imageImg"
            android:ellipsize="end"
            android:lineSpacingExtra="4dp"
            android:maxLines="2"
            android:text="奢润光彩美肌 全新香奈儿奢华精粹底妆全新香奈儿奢华精粹底妆"
            android:textSize="@dimen/normal_textsize" />

        <RelativeLayout
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageImg"
            android:layout_alignLeft="@+id/textTitleDialog"
            android:layout_alignStart="@+id/textTitleDialog">

            <TextView
                android:id="@+id/textPriceDialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥255"
                android:textColor="@color/light_black"
                android:textSize="@dimen/normal_textsize"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:textSize="@dimen/normal_textsize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:id="@+id/textView44"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/textPriceDialog"
                android:layout_toEndOf="@+id/textPriceDialog" />

            <TextView
                android:textSize="@dimen/normal_textsize"
                android:textColor="@color/basic_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="赚1"
                android:id="@+id/textZhuan"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/textView44"
                android:layout_toEndOf="@+id/textView44" />
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width"
        android:layout_marginBottom="10dp"
        android:background="@color/line_gray" />

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/viewGuiGe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/textView229"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="规格"
            android:textSize="@dimen/normal_textsize" />

        <com.sxbwstxpay.customview.FlowTagLayout
            android:id="@+id/flowTagLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toEndOf="@+id/textView229"
            android:layout_toRightOf="@+id/textView229" />
    </RelativeLayout>

    <ListView
        android:layout_marginBottom="10dp"
        android:divider="@null"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listGuiZe" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageImg"
        android:layout_alignLeft="@+id/textName"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignStart="@+id/textName"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/textDelete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/textView228"
            android:layout_toRightOf="@+id/textView228"
            android:background="@color/line_gray"
            android:gravity="center"
            android:text="-"
            android:textSize="@dimen/bigLitterText" />

        <TextView
            android:id="@+id/textNum"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_toEndOf="@+id/textDelete"
            android:layout_toRightOf="@+id/textDelete"
            android:background="@color/line_gray"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="1"
            android:textColor="@color/light_black"
            android:textSize="@dimen/normal_textsize" />

        <TextView
            android:id="@+id/textAdd"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_toEndOf="@+id/textNum"
            android:layout_toRightOf="@+id/textNum"
            android:background="@color/line_gray"
            android:gravity="center"
            android:text="+"
            android:textSize="@dimen/bigLitterText" />

        <TextView
            android:id="@+id/textView228"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="数量"
            android:textSize="@dimen/normal_textsize" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width"
        android:background="@color/line_gray" />


    <TextView
        android:id="@+id/textDaoJiShi"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:background="@drawable/btn_jianbian180_basic_0dp"
        android:gravity="center"
        android:text="倒计时：00:01:02"
        android:textColor="@color/white"
        android:textSize="16dp" />


    <LinearLayout
        android:id="@+id/viewKeGouMai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">
        <Button
            android:id="@+id/btnDuiHuanDialog"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/btn_jianbian180_basic_0dp"
            android:text="立即兑换"
            android:textColor="@color/white"
            android:textSize="16dp" />
        <LinearLayout
            android:id="@+id/viewGouMai"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:id="@+id/textAddCar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="加入购物车"
                android:textColor="@color/light_black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/textQuick"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_jianbian180_yellow_0dp"
                android:gravity="center"
                android:text="立即购买"
                android:textColor="@color/white"
                android:textSize="16dp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>