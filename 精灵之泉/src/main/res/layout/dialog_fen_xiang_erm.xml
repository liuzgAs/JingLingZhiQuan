<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:clipChildren="false"
    android:orientation="vertical">

    <LinearLayout
        android:clipChildren="false"
        android:id="@+id/viewJieTu"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageImg"
                android:layout_width="match_parent"
                android:layout_height="275dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_empty" />

            <RelativeLayout
                android:visibility="gone"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_margin="10dp"
                android:background="@mipmap/qiang_gou_jia">

                <TextView
                    android:id="@+id/textView73"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="18dp"
                    android:text="抢购价"
                    android:textColor="@color/white"
                    android:textSize="@dimen/normal_textsize" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/textView73"
                    android:layout_alignRight="@+id/textView73"
                    android:layout_below="@+id/textView73"
                    android:text="¥36.66"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/imageView69"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_jianbian180_basic_0dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="3699人已抢购"
            android:textColor="@color/white"
            android:textSize="@dimen/MoreBigText" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:clickable="false">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/imageEwmImg"
                android:layout_toStartOf="@+id/imageEwmImg">

                <ImageView
                    android:visibility="gone"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/baoyou" />

                <TextView
                    android:paddingTop="10dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/text2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="百草味香辣卤藕180g"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/MoreBigText"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:paddingBottom="8dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="市场价 ¥39.9"
                    android:textSize="@dimen/litterText"
                    android:layout_below="@+id/text2"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/imageEwmImg"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="-55dp"
                android:src="@mipmap/ic_empty01" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:background="@drawable/layout_selector_white_system_gray"
            android:id="@+id/textWeiXin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="微信"
            android:textColor="@color/light_black"
            android:textSize="@dimen/bigText" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/line_gray" />

        <TextView
            android:background="@drawable/layout_selector_white_system_gray"
            android:id="@+id/textPengYouQuan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="朋友圈"
            android:textColor="@color/light_black"
            android:textSize="@dimen/bigText" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/line_gray" />

        <TextView
            android:background="@drawable/layout_selector_white_system_gray"
            android:id="@+id/textBaoCun"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="保存"
            android:textColor="@color/light_black"
            android:textSize="@dimen/bigText" />
    </LinearLayout>

</LinearLayout>