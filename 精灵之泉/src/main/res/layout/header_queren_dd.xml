<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/viewXuanZeSHDZ"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/layout_selector_white_system_gray">

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical">

            <RelativeLayout
                android:id="@+id/relativeLayout13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true">

                <TextView
                    android:id="@+id/textConsignee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="收件人：肖潇萧"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/normal_textsize" />

                <TextView
                    android:id="@+id/textPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="50dp"
                    android:layout_marginStart="50dp"
                    android:layout_toEndOf="@+id/textConsignee"
                    android:layout_toRightOf="@+id/textConsignee"
                    android:text="18370061888"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/normal_textsize" />
            </RelativeLayout>

            <TextView
                android:id="@+id/textAreaAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/relativeLayout13"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:lineSpacingMultiplier="1.3"
                android:text="收货地址：福建省 厦门市 思明区 观音山 互动创想有限公司"
                android:textSize="@dimen/litterText" />
        </RelativeLayout>

        <ImageView
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/right" />
    </RelativeLayout>

    <TextView
        android:background="@drawable/layout_selector_white_system_gray"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="添加收货地址"
        android:textSize="@dimen/bigText"
        android:gravity="center"
        android:id="@+id/textAdd" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/marginTop"
        android:background="@color/background" />
</LinearLayout>