<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/MoreBigText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易类型"
                android:id="@+id/textView40"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:textSize="@dimen/MoreBigText"
                android:textColor="@color/light_black"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="银联支付"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/textView40"
                android:layout_toEndOf="@+id/textView40" />
        </RelativeLayout>

        <TextView
            android:background="@color/line_gray"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_width"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp" >

            <TextView
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/MoreBigText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易金额"
                android:id="@+id/textView108"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:letterSpacing="0.1"
                android:textSize="22dp"
                android:textColor="@color/basic_color"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥6666.00"
                android:id="@+id/textAmount"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/textView108"
                android:layout_toEndOf="@+id/textView108" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请选择交易通道"
        android:textSize="@dimen/normal_textsize"
        android:padding="10dp" />
</LinearLayout>