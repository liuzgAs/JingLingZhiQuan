<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@color/white"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <ImageView
            android:src="@mipmap/zhifuchenggong"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/imageView111"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <RelativeLayout
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView111"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_marginTop="2dp"
                android:textColor="@color/light_black"
                android:textSize="@dimen/moreLitterText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您还不是VIP精灵！\n加入VIP，自己购物+收款更省钱，别人购物+收款能赚钱"
                android:gravity="center_horizontal"
                android:id="@+id/textVipText"
                android:layout_below="@+id/view111"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_marginTop="2dp"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:background="@drawable/shape_basic1dp_0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="立即了解"
                android:textColor="@color/basic_color"
                android:textSize="@dimen/normal_textsize"
                android:id="@+id/textLiJiLiaoJie"
                android:layout_below="@+id/textVipText"
                android:layout_centerHorizontal="true" />

            <RelativeLayout
                android:id="@+id/view111"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付成功！"
                    android:textSize="@dimen/normal_textsize"
                    android:textColor="@color/light_black"
                    android:id="@+id/textStatusText"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="返回商城"
                    android:textSize="@dimen/normal_textsize"
                    android:textColor="@color/basic_color"
                    android:id="@+id/textFanHuiSC"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/textStatusText"
                    android:layout_toEndOf="@+id/textStatusText" />

            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/normalItemHeight" >

        <TextView
            android:textColor="@color/light_black"
            android:textSize="@dimen/normal_textsize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="其他推荐"
            android:id="@+id/textView206"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="40dp"
            android:background="@color/basic_color"
            android:layout_height="1dp"
            android:id="@+id/textView207"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/textView206"
            android:layout_toEndOf="@+id/textView206" />

        <TextView
            android:layout_marginRight="10dp"
            android:layout_width="40dp"
            android:background="@color/basic_color"
            android:layout_height="1dp"
            android:id="@+id/textView208"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/textView206"
            android:layout_toStartOf="@+id/textView206" />
    </RelativeLayout>
</LinearLayout>