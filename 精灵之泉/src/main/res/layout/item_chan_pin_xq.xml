<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView101"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/kouhong" />

    <TextView
        android:id="@+id/textView160"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView101"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="一只口红"
        android:textSize="@dimen/litterText" />

    <TextView
        android:id="@+id/textView161"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView160"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="¥75.00"
        android:textColor="@color/basic_color"
        android:textSize="@dimen/normal_textsize" />
</RelativeLayout>