<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/normalItemHeight"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/textView218"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="订单号：JKLJ222314534645"
            android:textColor="@color/light_black"
            android:textSize="@dimen/normal_textsize"
            android:layout_marginStart="5dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageView27"
            android:layout_toEndOf="@+id/imageView27" />

        <TextView
            android:id="@+id/textView219"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="等待付款"
            android:textColor="@color/basic_color"
            android:textSize="@dimen/normal_textsize" />

        <ImageView
            android:layout_marginLeft="10dp"
            android:src="@mipmap/weixuanzhong"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:id="@+id/imageView27"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_gravity="center_horizontal"
        >

        <ImageView
            android:id="@+id/imageView130"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/dingdandemo" />

        <TextView
            android:maxLines="2"
            android:ellipsize="end"
            android:id="@+id/textView304"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView130"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/imageView130"
            android:layout_toRightOf="@+id/imageView130"
            android:text="青陌印尼花奇楠木佛珠印尼花"
            android:textColor="@color/light_black"
            android:textSize="@dimen/MoreBigText" />

        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView304"
            android:layout_toRightOf="@+id/imageView130"
            android:layout_toEndOf="@+id/imageView130">

            <TextView
                android:textSize="@dimen/normal_textsize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="颜色：白色 尺寸：M"
                android:id="@+id/textView44"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="×2"
                android:layout_marginRight="10dp"
                android:id="@+id/textView45"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <TextView
            android:layout_marginBottom="8dp"
            android:textSize="@dimen/MoreBigText"
            android:textColor="@color/basic_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥450"
            android:id="@+id/textView46"
            android:layout_alignBottom="@+id/imageView130"
            android:layout_toRightOf="@+id/imageView130"
            android:layout_toEndOf="@+id/imageView130" />

    </RelativeLayout>

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/line_gray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width"
         />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_gravity="center_horizontal" >

        <ImageView
            android:id="@+id/imageView40"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/dingdandemo" />

        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView47"
            android:layout_toRightOf="@+id/imageView40"
            android:layout_toEndOf="@+id/imageView40" >

            <TextView
                android:textSize="@dimen/normal_textsize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="颜色：白色 尺寸：M"
                android:id="@+id/textView48"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="×2"
                android:layout_marginRight="10dp"
                android:id="@+id/textView49"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <TextView
            android:maxLines="2"
            android:ellipsize="end"
            android:id="@+id/textView47"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView40"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/imageView40"
            android:layout_toRightOf="@+id/imageView40"
            android:text="青陌印尼花奇楠木佛珠印尼花"
            android:textColor="@color/light_black"
            android:textSize="@dimen/MoreBigText" />

        <TextView
            android:layout_marginBottom="8dp"
            android:textSize="@dimen/MoreBigText"
            android:textColor="@color/basic_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥450"
            android:id="@+id/textView50"
            android:layout_alignBottom="@+id/imageView40"
            android:layout_toRightOf="@+id/imageView40"
            android:layout_toEndOf="@+id/imageView40" />
    </RelativeLayout>

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/line_gray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width"
        android:id="@+id/textView51" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/textZongJia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥78.00"
            android:textColor="@color/basic_color"
            android:textSize="@dimen/normal_textsize"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/textView52"
            android:layout_toStartOf="@+id/textView52" />

        <TextView
            android:id="@+id/textView308"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共计2件商品 合计："
            android:textColor="@color/light_black"
            android:textSize="@dimen/normal_textsize"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/textZongJia"
            android:layout_toStartOf="@+id/textZongJia" />

        <TextView
            android:layout_marginRight="10dp"
            android:textSize="@dimen/normal_textsize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="（含运费10元）"
            android:id="@+id/textView52"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal">

        <Button
            android:background="@drawable/btn_jianbian"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:id="@+id/buttonPingJia"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="确认付款"
            android:textColor="@color/white"
            android:textSize="@dimen/normal_textsize" />

        <TextView
            android:gravity="center"
            android:background="@null"
            android:id="@+id/button14"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"
            android:text="取消订单"
            android:textSize="@dimen/normal_textsize"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/buttonPingJia"
            android:layout_toStartOf="@+id/buttonPingJia"
            android:layout_marginEnd="20dp" />
    </RelativeLayout>
</LinearLayout>