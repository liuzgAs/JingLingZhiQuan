<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textTypeDes"
            android:textSize="@dimen/normal_textsize"
            android:layout_weight="1"
            android:text="还款"
            android:textColor="@color/basic_color"
            android:paddingLeft="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/textMoney"
            android:textSize="@dimen/normal_textsize"
            android:layout_weight="1"
            android:text="535.00"
            android:textColor="@color/light_black"
            android:paddingLeft="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/textAdd_time"
            android:textSize="@dimen/normal_textsize"
            android:layout_weight="1.5"
            android:text="2018-3-10 10:22"
            android:textColor="@color/light_black"
            android:paddingLeft="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <ImageView
        android:id="@+id/imageShangSanJiao"
        android:layout_marginBottom="-2dp"
        android:layout_marginLeft="20dp"
        android:src="@mipmap/shangsanjiao"
        android:layout_width="10dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/textTips"
        android:text="执行成功！执行时间：2018-3-10 10:26"
        android:textSize="@dimen/litterText"
        android:background="@drawable/shape_zhangdanmxtip"
        android:textColor="@color/basic_color"
        android:paddingLeft="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>