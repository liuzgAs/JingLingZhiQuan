<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_weight="1"
    android:layout_width="80dp"
    android:layout_height="60dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView90"
        android:layout_width="12dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/selector_up_qiang_gou" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <TextView
            android:id="@+id/textQiangGouTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="13:00"
            android:textColor="@color/tab_text_ligth_black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textQiangGouDes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textQiangGouTitle"
            android:layout_centerHorizontal="true"
            android:text="抢购中"
            android:textColor="@color/tab_text_ligth_black"
            android:textSize="@dimen/litterText" />
    </RelativeLayout>
</RelativeLayout>