<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/view_dingdan" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/normalItemHeight"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/textView351"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="购买数量"
            android:textColor="@color/light_black"
            android:textSize="@dimen/normal_textsize" />

        <TextView
            android:id="@+id/textView352"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@color/line_gray"
            android:gravity="center"
            android:text="+"
            android:textSize="@dimen/bigLitterText" />

        <TextView
            android:id="@+id/textView353"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="2dp"
            android:layout_toLeftOf="@+id/textView352"
            android:layout_toStartOf="@+id/textView352"
            android:background="@color/line_gray"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="2"
            android:textSize="@dimen/litterText" />

        <TextView
            android:id="@+id/textView354"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="2dp"
            android:layout_toLeftOf="@+id/textView353"
            android:layout_toStartOf="@+id/textView353"
            android:background="@color/line_gray"
            android:gravity="center"
            android:text="-"
            android:textSize="@dimen/bigLitterText" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView355"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width"
        android:background="@color/background" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/normalItemHeight"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/textView356"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="运费"
            android:textColor="@color/light_black"
            android:textSize="@dimen/normal_textsize" />

        <TextView
            android:id="@+id/textView357"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="10元"
            android:textColor="@color/light_black"
            android:textSize="@dimen/normal_textsize" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView119"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width"
        android:background="@color/background" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/normalItemHeight"
        android:layout_gravity="center_horizontal" >

        <TextView
            android:id="@+id/textView358"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="买家留言"
            android:textColor="@color/light_black"
            android:textSize="@dimen/normal_textsize" />

        <EditText
            android:background="@null"
            android:hint="选填：对本次交易的说明"
            android:textSize="@dimen/normal_edittextsize"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/editText19"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/textView358"
            android:layout_toEndOf="@+id/textView358" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView359"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width"
        android:background="@color/background" />

    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥156.02"
                android:textSize="@dimen/normal_textsize"
                android:textColor="@color/light_black"
                android:layout_marginRight="10dp"
                android:id="@+id/textView47"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="合计："
                android:textSize="@dimen/normal_textsize"
                android:id="@+id/textView48"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/textView47"
                android:layout_toStartOf="@+id/textView47" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥40"
                android:textSize="@dimen/normal_textsize"
                android:textColor="@color/light_black"
                android:layout_marginRight="10dp"
                android:id="@+id/textView49"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="赚："
                android:textSize="@dimen/normal_textsize"
                android:id="@+id/textView50"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/textView49"
                android:layout_toStartOf="@+id/textView49" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>