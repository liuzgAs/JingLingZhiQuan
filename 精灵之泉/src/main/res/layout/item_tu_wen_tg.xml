<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="03/09 11:46"
        android:textSize="@dimen/normal_textsize" />

    <TextView
        android:id="@+id/textShare_contents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="真皮真皮真皮真皮真皮真皮真皮真皮真皮真皮真皮真皮真皮真皮真皮真皮真皮真皮真皮真皮真皮真皮真皮真皮真皮真皮真皮真皮真皮真皮真皮真皮真皮真皮真皮真皮真皮真皮真皮真皮真皮真皮真皮真皮真皮真皮真皮真皮真皮真皮真皮真皮真皮真皮真皮真皮真皮真皮真皮真皮真皮真皮真皮真皮真皮"
        android:textSize="@dimen/normal_textsize" />

    <com.sxbwstxpay.customview.GridView4ScrollView
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:horizontalSpacing="8dp"
        android:numColumns="3"
        android:verticalSpacing="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/line_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageView22"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/xaizailiang" />

            <TextView
                android:id="@+id/textView42"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toEndOf="@+id/imageView22"
                android:layout_toRightOf="@+id/imageView22"
                android:text="下载量"
                android:textSize="@dimen/normal_textsize" />

            <TextView
                android:id="@+id/textXiaZai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/textView42"
                android:layout_toRightOf="@+id/textView42"
                android:text="(3200)"
                android:textSize="@dimen/litterText" />
        </RelativeLayout>

        <TextView
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="@dimen/line_width"
            android:layout_height="match_parent"
            android:background="@color/line_gray" />

        <RelativeLayout
            android:background="@drawable/layout_selector_white_system_gray"
            android:id="@+id/viewBaoCun"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageView78"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/baocuntuwen" />

            <TextView
                android:id="@+id/textView63"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toEndOf="@+id/imageView78"
                android:layout_toRightOf="@+id/imageView78"
                android:text="保存图文"
                android:textSize="@dimen/normal_textsize" />

            <TextView
                android:id="@+id/textBaoCun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/textView63"
                android:layout_toRightOf="@+id/textView63"
                android:text="(32)"
                android:textSize="@dimen/litterText" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>