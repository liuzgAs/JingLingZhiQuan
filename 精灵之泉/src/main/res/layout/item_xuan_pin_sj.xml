<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@color/white"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView98"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:scaleType="center"
        android:src="@mipmap/chengzi" />

    <TextView
        android:id="@+id/textView148"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView98"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toEndOf="@+id/imageView98"
        android:layout_toRightOf="@+id/imageView98"
        android:ellipsize="end"
        android:lines="2"
        android:text="骆驼女鞋2017秋季新款 英伦风百搭系带学院风内增高厚底高跟单鞋"
        android:textSize="@dimen/normal_textsize" />

    <TextView
        android:id="@+id/textView154"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/imageView98"
        android:layout_toRightOf="@+id/imageView98"
        android:text="¥2999"
        android:textColor="@color/light_black"
        android:textSize="@dimen/bigText" />

    <TextView
        android:id="@+id/textView157"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="2dp"
        android:layout_toEndOf="@+id/textView154"
        android:layout_toRightOf="@+id/textView154"
        android:text="/" />

    <TextView
        android:id="@+id/textView158"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="2dp"
        android:layout_toEndOf="@+id/textView157"
        android:layout_toRightOf="@+id/textView157"
        android:text="赚150"
        android:textColor="@color/basic_color"
        android:textSize="@dimen/normal_textsize" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/imageView98"
        android:layout_alignLeft="@+id/textView154"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignStart="@+id/textView154">

        <Button
            android:id="@+id/button3"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_jianbian270_basic_30dp"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/imageView99"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/button3"
            android:layout_toStartOf="@+id/button3"
            android:src="@mipmap/tupian" />

        <ImageView
            android:id="@+id/imageView100"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/imageView99"
            android:layout_toStartOf="@+id/imageView99"
            android:src="@mipmap/fenxiang" />

        <TextView
            android:id="@+id/textView159"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="库存1500"
            android:textSize="@dimen/litterText" />

    </RelativeLayout>

</RelativeLayout>