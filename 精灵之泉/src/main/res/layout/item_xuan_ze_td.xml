<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_selector_white_system_gray"
   >

    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/textDes"
        android:layout_marginBottom="15dp"
        android:layout_toRightOf="@+id/imageImg"
        android:id="@+id/textRateFee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="费率：0.55%    结算：2.00元/笔"
        android:textColor="@color/basic_color"
        android:textSize="@dimen/normal_textsize" />

    <TextView
        android:layout_toLeftOf="@+id/imageView6"
        android:layout_toRightOf="@+id/imageImg"
        android:layout_marginLeft="10dp"
        android:id="@+id/textDes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textName"
        android:text="单笔2万，8:00-22:00秒到"
        android:textSize="@dimen/normal_textsize" />

    <TextView
        android:layout_marginTop="-5dp"
        android:layout_alignTop="@+id/imageImg"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/imageImg"
        android:id="@+id/textName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="银联APPD+0"
        android:textColor="@color/light_black"
        android:textSize="@dimen/MoreBigText" />

    <ImageView
        android:layout_marginTop="15dp"
        android:id="@+id/imageImg"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:src="@mipmap/fei_lv_yinlian" />

    <ImageView
        android:layout_marginRight="10dp"
        android:src="@mipmap/right_big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView6"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>