<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/imageImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_empty"
        android:adjustViewBounds="true"
        android:maxWidth="600dp"
        android:maxHeight="1200dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="#33000000"
        android:layout_alignBottom="@+id/imageImg"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textStyle"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:textSize="@dimen/litterText"
            android:textColor="@color/white"
            android:text="潮搭"/>
        <com.sxbwstxpay.customview.HorizontalView
            android:layout_width="match_parent"
            android:layout_below="@+id/textStyle"
            android:layout_height="wrap_content">
            <com.sxbwstxpay.customview.MyEasyRecyclerView
                android:layout_width="wrap_content"
                android:id="@+id/recyclerView"
                android:layout_height="wrap_content"
                app:scrollbarStyle="insideOverlay"
                app:scrollbars="none"
                >
            </com.sxbwstxpay.customview.MyEasyRecyclerView>
        </com.sxbwstxpay.customview.HorizontalView>
    </RelativeLayout>
</RelativeLayout>
