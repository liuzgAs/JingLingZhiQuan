<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_gravity="center_horizontal"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imageView130"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/dingdandemo" />

    <TextView
        android:id="@+id/textView304"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView130"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/imageView130"
        android:layout_toRightOf="@+id/imageView130"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="青陌印尼花奇楠木佛珠印尼花"
        android:textColor="@color/light_black"
        android:textSize="@dimen/MoreBigText" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView304"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/imageView130"
        android:layout_toRightOf="@+id/imageView130">

        <TextView
            android:id="@+id/textView44"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="颜色：白色 尺寸：M"
            android:textSize="@dimen/normal_textsize" />

        <TextView
            android:id="@+id/textView45"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="×2" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView46"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView130"
        android:layout_marginBottom="8dp"
        android:layout_toEndOf="@+id/imageView130"
        android:layout_toRightOf="@+id/imageView130"
        android:text="¥450"
        android:textColor="@color/light_black"
        android:textSize="@dimen/MoreBigText" />

    <TextView
        android:id="@+id/textView118"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView46"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/textView46"
        android:layout_toRightOf="@+id/textView46"
        android:text="赚¥20"
        android:textColor="@color/basic_color"
        android:textSize="@dimen/bigText" />

</RelativeLayout>